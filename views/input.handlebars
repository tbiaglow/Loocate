<div class="container">
  <h5>Inspection of Comfort Station: {{id}}</h5>
  <div class="row">
    <div class="col-8 offset-2">
      <form id="inspection-form" data={{id}}>
        <div class="form-group">
            <label for="inspectFormSelect1">Cleanliness</label>
            <select class="form-control" id="cleanliness-input">
            <option>A: Acceptable</option>
            <option>U: Unacceptable</option>
            </select>
        </div>
        <div class="form-group">
            <label for="inspectFormSelect1">Safety</label>
            <select class="form-control" id="safety-input">
            <option>A: Acceptable</option>
            <option>U: Unacceptable</option>
            </select>
        </div>
        <div class="form-group">
            <label for="inspectFormInput1">Number of visitors</label>
            <input type="number" class="form-control" id="visitorcount-input" placeholder="10">
        </div>
        <div class="form-group">
            <label for="inspectFormInput1">Wait Time (mins)</label>
            <input type="number" class="form-control" id="waittime-input" placeholder="0 minutes">
        </div>
        <div class="form-group">
            <label for="inspectFormTextarea1">Comments</label>
            <textarea class="form-control" id="comments-input" rows="3"></textarea>
        </div>
         <button id="inspect-submit" type="submit" class="btn btn-primary mb-2">Submit</button>
      </form>
    </div>
  </div>
</div>
